{
	"tasks": {
		"dev": "deno run -A --watch --env-file server.ts",
		"migrate": "deno run -A npm:prisma@latest db push && deno run -A --unstable npm:prisma@latest generate --no-engine"
	},

	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@types/express": "npm:@types/express",
		"express": "npm:express@4.21.1",
		"kysely": "npm:kysely@^0.27.4",
		"pg": "npm:pg",
		"pg-pool": "npm:pg-pool"
	},

	"fmt": {
		"useTabs": true,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"lineWidth": 100
	},

	"exclude": [
		"node_modules",
		"generated",
		".git",
		".vscode",
		".idea",
		"dist",
		"build",
		"out",
		"target"
	],

	"compilerOptions": {
		"types": ["./types/express.d.ts"]
	}
}
